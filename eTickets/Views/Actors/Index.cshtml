@*Define Model*@
@model IEnumerable<eTickets.Models.Actor>

@*Define ViewData*@
@{
    ViewData["Title"] = "List of Actors";
}

@*Write code*@
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureUrl)</th>
                    <th>@Html.DisplayNameFor(model => model.Fullname)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded" src="@item.ProfilePictureUrl" alt="@item.Fullname" style="max-width: 150px"/>
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Fullname)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Bio)

                        </td>
                        <td class="align-middle">
                            <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square">Edit</i></a> |
                            <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye">Details</i></a> |
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash">Delete</i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="text-white">
    <a asp-controller="Actors" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle">Add New</i></a>
</div>
